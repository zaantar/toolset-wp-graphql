# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
indent_style = tab
end_of_line = lf
indent_size = 4
tab_width = 4
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

[{.jshintrc,*.json,*.yml}]
indent_style = space
indent_size = 2
